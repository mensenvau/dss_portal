user  nginx;
worker_processes  auto;

events { worker_connections 1024; }

http {
  include       /etc/nginx/mime.types;
  sendfile      on;
  server_tokens off;

  upstream frontend_upstream {
    server nextjs-frontend:3000;
  }

  upstream chamilo_upstream {
    server chamilo-web:80;
  }

  server {
    listen 80;
    # Agar domeningiz bo'lsa server_name yozing (ixtiyoriy)
    # server_name datasmart-solutions.com;

    # --- Next.js "main" (/)
    location / {
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_pass http://frontend_upstream;
    }

    # --- Chamilo (/lms)
    location /lms/ {
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_pass http://chamilo_upstream/;
    }

    # Statik fayllar yoki upload path'lar uchun optimizatsiya (ixtiyoriy):
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|woff2?|ttf|eot)$ {
      expires 7d;
      access_log off;
      try_files $uri @fallback;
    }
    location @fallback {
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_pass http://frontend_upstream;
    }
  }
}
