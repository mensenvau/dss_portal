server {
    listen 80;
    server_name datasmart-solutions.com www.datasmart-solutions.com;

    access_log /var/log/nginx/datasmart_access.log;
    error_log /var/log/nginx/datasmart_error.log;

    location / {
        proxy_pass http://127.0.0.1:8069;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Websocket qoâ€˜llab-quvvatlash
        proxy_buffering off;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}

nano /etc/nginx/sites-available/datasmart_solutions.conf
sudo ln -s /etc/nginx/sites-available/datasmart_solutions.conf /etc/nginx/sites-enabled/
sudo nginx -t
sudo systemctl reload nginx

sudo certbot --nginx -d datasmart-solutions.com -d www.datasmart-solutions.com
